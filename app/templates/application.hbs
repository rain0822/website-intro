<div class="fixed-action-btn direction-top active" style="top: 0px; right: 0px; padding-top: 0px;">
  <div class="page center">
    {{page}}
  </div>
</div>

<main>
  {{partial pageTemplate}}
  {{outlet}}
</main>

{{#if (gt page 1)}}
  <div class="fixed-action-btn direction-top" style="bottom: 25px; left: 25px;">
    <a id="menu" class="btn btn-floating btn-large light-blue waves-effect waves-light waves-circle" {{action "back" page}}>
      <i class="material-icons">chevron_left</i>
    </a>
  </div>
{{/if}}
{{#if (lt page pageMax)}}
  <div class="fixed-action-btn direction-top active" style="bottom: 25px; right: 25px;">
    <a id="menu" class="btn btn-floating btn-large light-blue waves-effect waves-light waves-circle" {{action "next" page}}>
      <i class="material-icons">chevron_right</i>
    </a>
  </div>
{{/if}}
